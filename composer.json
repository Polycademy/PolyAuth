{
	"name": "polycademy/polyauth",
	"description": "Authentication & Authorisation Library",
	"keywords": ["authentication", "authorisation", "sessions", "user accounts", "rbac", "access control", "oauth"],
	"homepage": "https://github.com/Polycademy/PolyAuth",
	"license": "WTFPL",
	"authors": [{
		"name": "Roger Qiu",
		"email": "roger.qiu@polycademy.com",
		"homepage": "http://polycademy.com",
		"role": "Founder and Developer"
	}],
	"require": {
		"php": ">=5.4.0",
		"aura/session": "dev-master",
		"leighmacdonald/php_rbac": "<=1.0",
		"ircmaxell/password-compat": "*",
		"phpmailer/phpmailer": "5.2.*",
		"psr/log": "1.0.0",
		"tedivm/stash": "0.10.*"
	},
	"require-dev": {
		"phpspec/phpspec": "2.0.*@dev"
	},
	"suggest": {
		"ext-apc": "Can provide a faster memory cache for PolyAuth."
	},
	"config": {
		"bin-dir": "bin/"
	},
	"autoload": {
		"psr-0": {
			"PolyAuth": "src"
		}
	}
}